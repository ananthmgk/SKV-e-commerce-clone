{
  "extends": ["stylelint-config-recommended", "stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ],
    "property-no-vendor-prefix": [
      true,
      {
        "ignoreProperties": ["-webkit-line-clamp", "-webkit-box-orient"]
      }
    ]
  }
}
